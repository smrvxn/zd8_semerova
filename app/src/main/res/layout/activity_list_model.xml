<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListModel"
    android:orientation="vertical"
    android:background="@color/green1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_title"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="140dp"
            android:onClick="onClickMenu"
            android:layout_marginTop="20dp"
            android:background="@drawable/ava" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow"
        android:entries="@array/tasks"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/title111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task1"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12.00"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23.11.22"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to sleep"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/nextbutton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:text="@string/list_text"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:onClick="onClickNewTask"/>




</LinearLayout>